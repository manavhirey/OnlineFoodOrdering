<section class="login flex justify-center">
  <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-md w-full space-y-8">
        <div>
          <img class="mx-auto h-24 w-auto" src="img/login.png" alt="Login">
          <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">Sign in to your account</h2>
          <p class="mt-2 text-center text-sm text-gray-600">
            Or
            <a href="/register" class="font-medium "> Create a Sloppy Joes account. </a>
          </p>
        </div>
        <form class="mt-8 space-y-6" action="/login" method="POST">
          <input type="hidden" name="remember" value="true">
          <div class="rounded-md shadow-sm -space-y-px">
            <% if(messages.error){ %>
            <span class="text-red-500 text-sm"><%= messages.error%></span>
            <% } %>
            <div>
              <label for="email-address" class="sr-only">Email address</label>
              <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-[#FE5F1E] focus:border-[#FE5F1E] focus:z-10 sm:text-sm" placeholder="Email address">
            </div>
            <div>
              <label for="password" class="sr-only">Password</label>
              <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-[#FE5F1E] focus:border-[#FE5F1E] focus:z-10 sm:text-sm" placeholder="Password">
            </div>
          </div>
    
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-[#FE5F1E] border-gray-300 rounded">
              <label for="remember-me" class="ml-2 block text-sm text-gray-900"> Remember me </label>
            </div>
    
            <div class="text-sm">
              <a href="#" class="font-medium"> Forgot your password? </a>
            </div>
          </div>
    
          <div>
            <button type="submit" class="btn-primary group relative w-full flex justify-center py-2 px-4 rounded-full text-gray-900">
              Sign in
            </button>
          </div>
        </form>
      </div>
    </div>
</section>