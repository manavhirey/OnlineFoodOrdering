<section class="status">
    <div class="container mx-auto">
        <div class="status-container w-2/3 mx-auto ">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold"> Track Order Status</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-500 text-xs"> <%= order.id%> </h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order)%>">
            </div>
            <ul>
                <li class="status-line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status-line text-xl pb-16" data-status="confirmed"><span>Order Confirmed</span></li>
                <li class="status-line text-xl pb-16" data-status="prepared"><span>Preparing</span></li>
                <li class="status-line text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status-line text-xl" data-status="completed"><span>Order Delivered</span></li>
            </ul>
        </div>
    </div>
</section>